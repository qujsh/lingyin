{
  "appId": "cn.nextvoice",
  "productName": "lingyin-assistant",
  "asar": true,
  "mac": {
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ]
  },
  "win": {
    "icon": "assets/icon.ico",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "extraResources": [
    "./assets/**"
  ],
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220,
        "type": "file"
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "qujsh",
      "repo": "lingyin",
      "releaseType": "release"
    }
  ]
}
