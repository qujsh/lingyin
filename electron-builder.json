{
  "appId": "cn.nextvoice",
  "productName": "凌音助手",
  "asar": true,
  "afterSign": "./notarize.js",
  "mac": {
    "artifactName": "lingyin-${version}-${arch}.${ext}",
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    ],
    "type": "distribution",
    "hardenedRuntime": true,
    "entitlements": "assets/entitlements.mac.plist",
    "entitlementsInherit": "assets/entitlements.mac.plist",
    "gatekeeperAssess": false
  },
  "win": {
    "artifactName": "lingyin-${version}-${arch}.${ext}",
    "icon": "assets/icon.ico",
    "target": [
      "nsis"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "extraResources": [
    "./assets/**"
  ],
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220,
        "type": "file"
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "qujsh",
      "repo": "lingyin",
      "releaseType": "release"
    }
  ]
}
